---
import Layout from '../../../layouts/Layout.astro';
import { pageSEO } from '../../../config/site';
import { ROUTES } from '../../../config/paths';
import { Section, Container } from '../../../components/ui';
import { apiIntegration } from '../../../data/integrations';
import {
  Code,
  Book,
  Key,
  Shield,
  Zap,
  AlertTriangle,
  Check,
  Terminal,
  Webhook,
  ArrowRight,
  Clock,
  Lock,
  Server,
  Globe,
} from 'lucide-react';

const seo = pageSEO.docsApi;

/**
 * API endpoint documentation
 */
const apiEndpoints = [
  {
    method: 'GET',
    path: '/v1/users',
    description: 'List all users in your organization',
    auth: 'Bearer Token',
    parameters: [
      {
        name: 'limit',
        type: 'integer',
        optional: true,
        description: 'Number of results to return (max 100)',
      },
      {
        name: 'cursor',
        type: 'string',
        optional: true,
        description: 'Pagination cursor for next page',
      },
    ],
    response: `{
  "data": [
    {
      "id": "usr_123456789",
      "email": "user@example.com",
      "name": "John Doe",
      "role": "admin",
      "created_at": "2024-01-15T10:30:00Z"
    }
  ],
  "pagination": {
    "has_more": true,
    "next_cursor": "eyJpZCI6MTIzfQ=="
  }
}`,
  },
  {
    method: 'POST',
    path: '/v1/users',
    description: 'Create a new user in your organization',
    auth: 'Bearer Token',
    parameters: [
      { name: 'email', type: 'string', optional: false, description: 'User email address' },
      { name: 'name', type: 'string', optional: false, description: 'User full name' },
      {
        name: 'role',
        type: 'string',
        optional: true,
        description: 'User role (admin, member, guest)',
      },
    ],
    response: `{
  "id": "usr_987654321",
  "email": "newuser@example.com",
  "name": "Jane Smith",
  "role": "member",
  "created_at": "2024-06-20T14:45:00Z",
  "status": "active"
}`,
  },
  {
    method: 'GET',
    path: '/v1/users/{id}',
    description: 'Retrieve a specific user by ID',
    auth: 'Bearer Token',
    parameters: [{ name: 'id', type: 'string', optional: false, description: 'User ID' }],
    response: `{
  "id": "usr_123456789",
  "email": "user@example.com",
  "name": "John Doe",
  "role": "admin",
  "created_at": "2024-01-15T10:30:00Z",
  "last_login": "2024-06-20T09:00:00Z",
  "preferences": {
    "timezone": "America/New_York",
    "notifications": true
  }
}`,
  },
  {
    method: 'PUT',
    path: '/v1/users/{id}',
    description: 'Update an existing user',
    auth: 'Bearer Token',
    parameters: [
      { name: 'id', type: 'string', optional: false, description: 'User ID' },
      { name: 'name', type: 'string', optional: true, description: 'User full name' },
      { name: 'role', type: 'string', optional: true, description: 'User role' },
    ],
    response: `{
  "id": "usr_123456789",
  "email": "user@example.com",
  "name": "John Doe Jr.",
  "role": "member",
  "updated_at": "2024-06-20T15:30:00Z"
}`,
  },
  {
    method: 'DELETE',
    path: '/v1/users/{id}',
    description: 'Delete a user from your organization',
    auth: 'Bearer Token',
    parameters: [{ name: 'id', type: 'string', optional: false, description: 'User ID' }],
    response: `{
  "id": "usr_123456789",
  "deleted": true,
  "deleted_at": "2024-06-20T16:00:00Z"
}`,
  },
];

/**
 * Code examples for different languages
 */
const codeExamples = [
  {
    language: 'cURL',
    code: `curl -X GET "https://api.modernsaas.dev/v1/users" \\
  -H "Authorization: Bearer YOUR_API_KEY" \\
  -H "Content-Type: application/json"`,
  },
  {
    language: 'JavaScript',
    code: `const response = await fetch('https://api.modernsaas.dev/v1/users', {
  method: 'GET',
  headers: {
    'Authorization': 'Bearer YOUR_API_KEY',
    'Content-Type': 'application/json',
  },
});

const data = await response.json();
console.log(data);`,
  },
  {
    language: 'Python',
    code: `import requests

headers = {
    'Authorization': 'Bearer YOUR_API_KEY',
    'Content-Type': 'application/json',
}

response = requests.get('https://api.modernsaas.dev/v1/users', headers=headers)
data = response.json()
print(data)`,
  },
  {
    language: 'Ruby',
    code: `require 'net/http'
require 'json'

uri = URI('https://api.modernsaas.dev/v1/users')
req = Net::HTTP::Get.new(uri)
req['Authorization'] = 'Bearer YOUR_API_KEY'
req['Content-Type'] = 'application/json'

res = Net::HTTP.start(uri.hostname, uri.port, use_ssl: true) do |http|
  http.request(req)
end

puts JSON.parse(res.body)`,
  },
];

/**
 * Rate limit tiers
 */
const rateLimitTiers = [
  { plan: 'Free', requests: '100', burst: '10' },
  { plan: 'Starter', requests: '1,000', burst: '100' },
  { plan: 'Pro', requests: '10,000', burst: '1,000' },
  { plan: 'Enterprise', requests: 'Unlimited', burst: '10,000' },
];

/**
 * Error codes
 */
const errorCodes = [
  { code: '200', name: 'OK', description: 'Request succeeded' },
  { code: '201', name: 'Created', description: 'Resource created successfully' },
  { code: '400', name: 'Bad Request', description: 'Invalid request parameters' },
  { code: '401', name: 'Unauthorized', description: 'Invalid or missing API key' },
  { code: '403', name: 'Forbidden', description: 'Insufficient permissions' },
  { code: '404', name: 'Not Found', description: 'Resource does not exist' },
  { code: '429', name: 'Rate Limited', description: 'Too many requests' },
  { code: '500', name: 'Server Error', description: 'Internal server error' },
];

const baseUrl = 'https://api.modernsaas.dev';
---

<Layout title={seo.title} description={seo.description}>
  {/* Hero Section */}
  <Section
    background="gradient"
    padding="2xl"
    className="relative overflow-hidden"
    aria-label="API Reference Hero"
  >
    <Container size="narrow" className="text-center relative z-10">
      <div
        class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-primary-100 dark:bg-primary-900/50 text-primary-700 dark:text-primary-300 text-sm font-semibold mb-6 border border-primary-200 dark:border-primary-800"
      >
        <Code size={16} />
        <span>API Reference</span>
      </div>

      <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6 text-text-primary">
        ModernSaaS <span
          class="text-transparent bg-clip-text bg-gradient-to-r from-primary-600 to-secondary-600 dark:from-primary-400 dark:to-secondary-400"
          >API</span
        >
      </h1>

      <p class="text-lg md:text-xl mb-10 text-text-secondary max-w-2xl mx-auto">
        Build powerful integrations with our REST API. Complete documentation, code examples, and
        authentication guides.
      </p>

      {/* Quick Links */}
      <div class="flex flex-wrap justify-center gap-4">
        <a
          href="#authentication"
          class="inline-flex items-center gap-2 px-4 py-2 rounded-lg bg-white dark:bg-gray-900 text-text-primary hover:bg-gray-50 dark:hover:bg-gray-800 transition-colors shadow-sm"
        >
          <Key size={18} />
          <span>Authentication</span>
        </a>
        <a
          href="#endpoints"
          class="inline-flex items-center gap-2 px-4 py-2 rounded-lg bg-white dark:bg-gray-900 text-text-primary hover:bg-gray-50 dark:hover:bg-gray-800 transition-colors shadow-sm"
        >
          <Terminal size={18} />
          <span>Endpoints</span>
        </a>
        <a
          href="#rate-limits"
          class="inline-flex items-center gap-2 px-4 py-2 rounded-lg bg-white dark:bg-gray-900 text-text-primary hover:bg-gray-50 dark:hover:bg-gray-800 transition-colors shadow-sm"
        >
          <Clock size={18} />
          <span>Rate Limits</span>
        </a>
        <a
          href={ROUTES.DOCS}
          class="inline-flex items-center gap-2 px-4 py-2 rounded-lg bg-primary-600 text-white hover:bg-primary-700 transition-colors shadow-sm"
        >
          <Book size={18} />
          <span>Back to Docs</span>
        </a>
      </div>
    </Container>
  </Section>

  {/* Authentication Section */}
  <Section id="authentication" background="default" padding="xl" aria-label="Authentication">
    <Container>
      <div class="max-w-4xl mx-auto">
        <div class="flex items-center gap-3 mb-6">
          <div
            class="w-12 h-12 flex items-center justify-center rounded-xl bg-primary-100 dark:bg-primary-900/30 text-primary-600 dark:text-primary-400"
          >
            <Lock size={24} />
          </div>
          <div>
            <h2 class="text-3xl font-bold text-text-primary">Authentication</h2>
            <p class="text-text-secondary">Secure your API requests</p>
          </div>
        </div>

        <div class="prose dark:prose-invert max-w-none mb-8">
          <p class="text-text-secondary text-lg">
            All API requests must include an authentication header. We support API key
            authentication via Bearer tokens.
          </p>
        </div>

        {/* API Key Authentication */}
        <div class="mb-10">
          <h3 class="text-xl font-bold text-text-primary mb-4 flex items-center gap-2">
            <Key size={20} className="text-primary-600" />
            API Key Authentication
          </h3>
          <p class="text-text-secondary mb-4">
            Include your API key in the Authorization header of every request:
          </p>

          <div class="bg-bg-secondary rounded-lg border border-border-default overflow-hidden">
            <div
              class="flex items-center justify-between px-4 py-2 border-b border-border-default bg-bg-muted"
            >
              <span class="text-sm font-medium text-text-muted">Authorization Header</span>
              <span class="text-xs text-text-muted">Required</span>
            </div>
            <div class="p-4">
              <code class="text-sm font-mono text-text-primary"
                >Authorization: Bearer YOUR_API_KEY</code
              >
            </div>
          </div>
        </div>

        {/* Getting API Key */}
        <div class="bg-bg-secondary rounded-2xl p-6 border border-border-default">
          <h4 class="text-lg font-bold text-text-primary mb-3 flex items-center gap-2">
            <Zap size={18} className="text-amber-500" />
            Getting Your API Key
          </h4>
          <ol class="space-y-3 text-text-secondary">
            <li class="flex items-start gap-3">
              <span
                class="flex-shrink-0 w-6 h-6 flex items-center justify-center rounded-full bg-primary-100 dark:bg-primary-900/30 text-primary-600 text-sm font-semibold"
                >1</span
              >
              <span>Log in to your ModernSaaS dashboard</span>
            </li>
            <li class="flex items-start gap-3">
              <span
                class="flex-shrink-0 w-6 h-6 flex items-center justify-center rounded-full bg-primary-100 dark:bg-primary-900/30 text-primary-600 text-sm font-semibold"
                >2</span
              >
              <span>Navigate to Settings â†’ API Keys</span>
            </li>
            <li class="flex items-start gap-3">
              <span
                class="flex-shrink-0 w-6 h-6 flex items-center justify-center rounded-full bg-primary-100 dark:bg-primary-900/30 text-primary-600 text-sm font-semibold"
                >3</span
              >
              <span>Click "Generate New Key"</span>
            </li>
            <li class="flex items-start gap-3">
              <span
                class="flex-shrink-0 w-6 h-6 flex items-center justify-center rounded-full bg-primary-100 dark:bg-primary-900/30 text-primary-600 text-sm font-semibold"
                >4</span
              >
              <span>Copy and store your key securely (it won't be shown again)</span>
            </li>
          </ol>
        </div>
      </div>
    </Container>
  </Section>

  {/* Code Examples Section */}
  <Section background="muted" padding="xl" aria-label="Code Examples">
    <Container>
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-8">
          <h2 class="text-3xl font-bold text-text-primary mb-3">Quick Start</h2>
          <p class="text-text-secondary">
            Copy-paste ready code examples in your favorite language
          </p>
        </div>

        <div class="space-y-4">
          {
            codeExamples.map((example) => (
              <div class="bg-bg-secondary rounded-xl border border-border-default overflow-hidden">
                <div class="flex items-center justify-between px-4 py-2 border-b border-border-default bg-bg-muted">
                  <div class="flex items-center gap-2">
                    <Terminal size={16} className="text-text-muted" />
                    <span class="text-sm font-medium text-text-primary">{example.language}</span>
                  </div>
                </div>
                <div class="p-4 overflow-x-auto">
                  <pre class="text-sm font-mono text-text-primary">
                    <code>{example.code}</code>
                  </pre>
                </div>
              </div>
            ))
          }
        </div>
      </div>
    </Container>
  </Section>

  {/* API Endpoints Section */}
  <Section id="endpoints" background="default" padding="xl" aria-label="API Endpoints">
    <Container>
      <div class="max-w-4xl mx-auto">
        <div class="flex items-center gap-3 mb-6">
          <div
            class="w-12 h-12 flex items-center justify-center rounded-xl bg-secondary-100 dark:bg-secondary-900/30 text-secondary-600 dark:text-secondary-400"
          >
            <Server size={24} />
          </div>
          <div>
            <h2 class="text-3xl font-bold text-text-primary">Endpoints</h2>
            <p class="text-text-secondary">REST API reference for user management</p>
          </div>
        </div>

        <div
          class="mb-6 p-4 rounded-lg bg-primary-50 dark:bg-primary-900/20 border border-primary-200 dark:border-primary-800"
        >
          <div class="flex items-center gap-2 text-primary-700 dark:text-primary-300">
            <Globe size={18} />
            <span class="font-mono text-sm">{baseUrl}</span>
          </div>
        </div>

        <div class="space-y-8">
          {
            apiEndpoints.map((endpoint) => (
              <div class="bg-bg-secondary rounded-2xl border border-border-default overflow-hidden">
                {/* Endpoint Header */}
                <div class="flex flex-wrap items-center gap-3 p-4 border-b border-border-default bg-bg-muted">
                  <span
                    class={`px-3 py-1 rounded-full text-xs font-bold uppercase ${
                      endpoint.method === 'GET'
                        ? 'bg-green-100 text-green-700 dark:bg-green-900/30 dark:text-green-300'
                        : endpoint.method === 'POST'
                          ? 'bg-blue-100 text-blue-700 dark:bg-blue-900/30 dark:text-blue-300'
                          : endpoint.method === 'PUT'
                            ? 'bg-amber-100 text-amber-700 dark:bg-amber-900/30 dark:text-amber-300'
                            : 'bg-red-100 text-red-700 dark:bg-red-900/30 dark:text-red-300'
                    }`}
                  >
                    {endpoint.method}
                  </span>
                  <code class="text-sm font-mono text-text-primary">{endpoint.path}</code>
                  <span class="ml-auto text-xs text-text-muted flex items-center gap-1">
                    <Lock size={12} />
                    {endpoint.auth}
                  </span>
                </div>

                <div class="p-4">
                  <p class="text-text-secondary mb-4">{endpoint.description}</p>

                  {/* Parameters */}
                  {endpoint.parameters.length > 0 && (
                    <div class="mb-4">
                      <h4 class="text-sm font-semibold text-text-primary mb-2">Parameters</h4>
                      <div class="overflow-x-auto">
                        <table class="w-full text-sm">
                          <thead>
                            <tr class="border-b border-border-default">
                              <th class="text-left py-2 pr-4 text-text-muted font-medium">Name</th>
                              <th class="text-left py-2 pr-4 text-text-muted font-medium">Type</th>
                              <th class="text-left py-2 pr-4 text-text-muted font-medium">
                                Required
                              </th>
                              <th class="text-left py-2 text-text-muted font-medium">
                                Description
                              </th>
                            </tr>
                          </thead>
                          <tbody>
                            {endpoint.parameters.map((param) => (
                              <tr class="border-b border-border-default last:border-0">
                                <td class="py-2 pr-4 font-mono text-text-primary">{param.name}</td>
                                <td class="py-2 pr-4 text-text-secondary">{param.type}</td>
                                <td class="py-2 pr-4">
                                  {param.optional ? (
                                    <span class="text-text-muted">Optional</span>
                                  ) : (
                                    <span class="text-red-600 dark:text-red-400">Required</span>
                                  )}
                                </td>
                                <td class="py-2 text-text-secondary">{param.description}</td>
                              </tr>
                            ))}
                          </tbody>
                        </table>
                      </div>
                    </div>
                  )}

                  {/* Response */}
                  <div>
                    <h4 class="text-sm font-semibold text-text-primary mb-2">Response</h4>
                    <pre class="bg-bg-tertiary rounded-lg p-3 overflow-x-auto">
                      <code class="text-xs font-mono text-text-primary">{endpoint.response}</code>
                    </pre>
                  </div>
                </div>
              </div>
            ))
          }
        </div>
      </div>
    </Container>
  </Section>

  {/* Rate Limiting Section */}
  <Section id="rate-limits" background="muted" padding="xl" aria-label="Rate Limiting">
    <Container>
      <div class="max-w-4xl mx-auto">
        <div class="flex items-center gap-3 mb-6">
          <div
            class="w-12 h-12 flex items-center justify-center rounded-xl bg-accent-100 dark:bg-accent-900/30 text-accent-600 dark:text-accent-400"
          >
            <Clock size={24} />
          </div>
          <div>
            <h2 class="text-3xl font-bold text-text-primary">Rate Limiting</h2>
            <p class="text-text-secondary">Understand our rate limits and best practices</p>
          </div>
        </div>

        <div class="prose dark:prose-invert max-w-none mb-8">
          <p class="text-text-secondary text-lg">
            To ensure fair usage and platform stability, API requests are rate-limited based on your
            plan. Rate limits are enforced per API key.
          </p>
        </div>

        {/* Rate Limit Tiers */}
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 mb-8">
          {
            rateLimitTiers.map((tier) => (
              <div class="bg-bg-secondary rounded-xl p-6 border border-border-default text-center">
                <h4 class="font-bold text-text-primary mb-2">{tier.plan}</h4>
                <div class="text-2xl font-bold text-primary-600 dark:text-primary-400 mb-1">
                  {tier.requests}
                </div>
                <p class="text-xs text-text-muted mb-4">requests/minute</p>
                <div class="text-sm font-semibold text-text-secondary">Burst: {tier.burst}</div>
              </div>
            ))
          }
        </div>

        {/* Rate Limit Headers */}
        <div class="bg-bg-secondary rounded-2xl p-6 border border-border-default">
          <h3 class="text-lg font-bold text-text-primary mb-4 flex items-center gap-2">
            <AlertTriangle size={18} className="text-amber-500" />
            Rate Limit Headers
          </h3>
          <p class="text-text-secondary mb-4">
            Every API response includes headers indicating your current rate limit status:
          </p>
          <div class="space-y-2 font-mono text-sm">
            <div
              class="flex flex-col sm:flex-row sm:items-center gap-1 sm:gap-4 p-3 bg-bg-tertiary rounded-lg"
            >
              <code class="text-primary-600 whitespace-nowrap">X-RateLimit-Limit</code>
              <span class="text-text-secondary">Maximum requests allowed per window</span>
            </div>
            <div
              class="flex flex-col sm:flex-row sm:items-center gap-1 sm:gap-4 p-3 bg-bg-tertiary rounded-lg"
            >
              <code class="text-primary-600 whitespace-nowrap">X-RateLimit-Remaining</code>
              <span class="text-text-secondary">Requests remaining in current window</span>
            </div>
            <div
              class="flex flex-col sm:flex-row sm:items-center gap-1 sm:gap-4 p-3 bg-bg-tertiary rounded-lg"
            >
              <code class="text-primary-600 whitespace-nowrap">X-RateLimit-Reset</code>
              <span class="text-text-secondary">Unix timestamp when the window resets</span>
            </div>
          </div>
        </div>
      </div>
    </Container>
  </Section>

  {/* Error Handling Section */}
  <Section background="default" padding="xl" aria-label="Error Handling">
    <Container>
      <div class="max-w-4xl mx-auto">
        <div class="flex items-center gap-3 mb-6">
          <div
            class="w-12 h-12 flex items-center justify-center rounded-xl bg-red-100 dark:bg-red-900/30 text-red-600 dark:text-red-400"
          >
            <AlertTriangle size={24} />
          </div>
          <div>
            <h2 class="text-3xl font-bold text-text-primary">Error Handling</h2>
            <p class="text-text-secondary">HTTP status codes and error responses</p>
          </div>
        </div>

        <div class="overflow-x-auto">
          <table class="w-full text-sm">
            <thead>
              <tr class="border-b-2 border-border-default">
                <th class="text-left py-3 pr-4 text-text-primary font-semibold">Code</th>
                <th class="text-left py-3 pr-4 text-text-primary font-semibold">Name</th>
                <th class="text-left py-3 text-text-primary font-semibold">Description</th>
              </tr>
            </thead>
            <tbody>
              {
                errorCodes.map((error) => (
                  <tr class="border-b border-border-default last:border-0">
                    <td class="py-3 pr-4">
                      <span
                        class={`inline-flex items-center px-2 py-0.5 rounded text-xs font-bold ${
                          error.code.startsWith('2')
                            ? 'bg-green-100 text-green-700 dark:bg-green-900/30 dark:text-green-300'
                            : error.code.startsWith('4')
                              ? 'bg-amber-100 text-amber-700 dark:bg-amber-900/30 dark:text-amber-300'
                              : 'bg-red-100 text-red-700 dark:bg-red-900/30 dark:text-red-300'
                        }`}
                      >
                        {error.code}
                      </span>
                    </td>
                    <td class="py-3 pr-4 font-medium text-text-primary">{error.name}</td>
                    <td class="py-3 text-text-secondary">{error.description}</td>
                  </tr>
                ))
              }
            </tbody>
          </table>
        </div>

        {/* Error Response Example */}
        <div class="mt-8">
          <h3 class="text-lg font-bold text-text-primary mb-4">Error Response Format</h3>
          <div class="bg-bg-secondary rounded-xl border border-border-default overflow-hidden">
            <div class="px-4 py-2 border-b border-border-default bg-bg-muted">
              <span class="text-sm font-medium text-text-muted"
                >Example Error Response (400 Bad Request)</span
              >
            </div>
            <div class="p-4">
              <pre
                class="text-sm font-mono text-text-primary overflow-x-auto"><code>{`{
  "error": {
    "code": "invalid_request",
    "message": "The request is missing required parameters",
    "details": [
      {
        "field": "email",
        "message": "Email is required"
      }
    ],
    "request_id": "req_abc123xyz"
  }
}`}</code></pre>
            </div>
          </div>
        </div>
      </div>
    </Container>
  </Section>

  {/* Webhooks Section */}
  <Section background="muted" padding="xl" aria-label="Webhooks">
    <Container>
      <div class="max-w-4xl mx-auto">
        <div class="flex items-center gap-3 mb-6">
          <div
