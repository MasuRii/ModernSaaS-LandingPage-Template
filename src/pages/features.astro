---
import Layout from '../layouts/Layout.astro';
import { pageSEO } from '../config/site';
import { ROUTES } from '../config/paths';
import {
  FeaturesHero,
  FeatureDetail,
  UseCases,
  FeatureComparison,
  DemoVideo,
  FinalCTA,
} from '../components/sections';

const seo = pageSEO.features;
---

<Layout title={seo.title} description={seo.description}>
  {/* 1. Features Hero Section */}
  <FeaturesHero client:idle />

  {/* 2. Detailed Feature Sections (Alternating) */}
  <FeatureDetail client:visible />

  {/* 3. Use Cases Section */}
  <UseCases client:visible />

  {/* 4. Feature Comparison Section */}
  <FeatureComparison client:visible />

  {/* 5. Demo Video Section */}
  <DemoVideo client:visible />

  {/* 6. Final CTA Section (linking to pricing as per requirements) */}
  <FinalCTA
    client:visible
    primaryButton={{ text: 'View Pricing', href: ROUTES.PRICING }}
    secondaryButton={{ text: 'Contact Sales', href: ROUTES.CONTACT }}
  />
</Layout>
