---
import Layout from '../layouts/Layout.astro';
import { getAssetPath } from '../config/paths';
import {
  Hero,
  LogoCloudSection,
  FeaturesOverview,
  HowItWorks,
  StatsSection,
  IntegrationsSection,
  TestimonialsSection,
  PricingPreview,
  FAQSection,
  FinalCTA,
} from '../components/sections';
---

<Layout
  title="Home"
  preloadImages={[
    {
      href: getAssetPath('images/dashboard-mockup.svg'),
      fetchpriority: 'high',
      as: 'image',
      type: 'image/svg+xml',
    },
  ]}
>
  {/* 1. Hero Section */}
  <Hero client:load />

  {/* 2. Logo Cloud Section */}
  <LogoCloudSection client:load />

  {/* 3. Features Overview Section */}
  <FeaturesOverview client:load />

  {/* 4. How It Works Section */}
  <HowItWorks client:load />

  {/* 5. Statistics Section */}
  <StatsSection client:load />

  {/* 6. Integrations Section */}
  <IntegrationsSection client:load />

  {/* 7. Testimonials Section */}
  <TestimonialsSection client:load />

  {/* 8. Pricing Preview Section */}
  <PricingPreview client:load />

  {/* 9. FAQ Section */}
  <FAQSection client:load />

  {/* 10. Final CTA Section */}
  <FinalCTA client:load />
</Layout>
