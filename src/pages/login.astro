---
import Layout from '../layouts/Layout.astro';
import LoginForm from '../components/forms/LoginForm';
import { GradientBackground } from '../components/ui/GradientBackground';
import { pageSEO } from '../config/site';

const seo = pageSEO.login || {
  title: 'Sign In',
  description: 'Sign in to your account to access your dashboard and manage your projects.',
};
---

<Layout
  title={seo.title}
  description={seo.description}
  headerVariant="minimal"
  footerVariant="minimal"
>
  <div
    class="relative flex flex-col items-center justify-center min-h-[80vh] px-4 py-12 sm:px-6 lg:px-8"
  >
    {/* Background */}
    <div class="absolute inset-0 -z-10 overflow-hidden">
      <GradientBackground variant="subtle" intensity={0.5} client:load />
    </div>

    <LoginForm client:load />
  </div>
</Layout>
